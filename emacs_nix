;; David's emacs configuration file
;; Date last modified: 5/21/2017

;; -*- mode: elisp -*-

;; Disable both the menu bar and the tool bar.
;; This forces you to learn the keybindings

(setq menu-bar-mode nil)
(setq tool-bar-mode nil)

;; Enable syntax highlighting
(setq enable-global-font-lock-mode t)

;; Disable the splash screen (to enable it agin, replace the t with nil)
(setq inhibit-splash-screen nil)

;; Enable transient mark mode
;; (transient-mark-mode 1)

;; Add a package repository
(require 'package)
(add-to-list 'package-archives '("melpa" . "https://melpa.org/packages/"))

;;;;org-mode configuration

;; Enable org-mode
 (require 'org)

;; Make org-mode work with files ending in .org
(add-to-list 'auto-mode-alist '("\\.org$" . org-mode))

;; The above is the default in recent emacsen

;; Add theme files
(add-to-list 'custom-theme-load-path "~/.emacs.d/elpa/color-theme-20080305/themes")

(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(ansi-color-names-vector
   ["#242424" "#e5786d" "#95e454" "#cae682" "#8ac6f2" "#333366" "#ccaa8f" "#f6f3e8"])
 '(custom-enabled-themes (quote (manoj-dark)))
 '(menu-bar-mode nil)
 '(tool-bar-mode nil))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(default ((t (:inherit nil :stipple nil :background "black" :foreground "WhiteSmoke" :inverse-video nil :box nil :strike-through nil :overline nil :underline nil :slant normal :weight normal :height 120 :width normal :foundry "PfEd" :family "DejaVu Sans Mono")))))
